.tab-bar 
    width: 100%;
    border-bottom: solid 1px #E8E8E8;
    position: relative;
    padding: 6px 0 0;
    .tab 
        min-height: 45px;
        display: flex;
        justify-content: flex-start;
        .tab-pane 
            margin-right: 30px;
            position: relative;
            cursor: pointer;
            transition: .3s;
            &:hover 
                color: #398BF7;
                font-weight: 500;
                .tab-dot
                    background-color: #398BF7;
            span 
                display: inline-block;
            
            .tab-dot 
                display: inline-block;
                width: 4px;
                height: 4px;
                border-radius: 50%;
                background-color: #989898;
                margin: 4px 10px;
            
            .active-dot 
                background-color: #398BF7;
        
        .active-tab 
            color: #398BF7;
        
    
    .tabs-active-bar 
        position: absolute;
        bottom: 0;
        width: 28px;
        height: 2px;
        transform: translateX(0);
        box-sizing: border-box;
        background-color: #398BF7;
        z-index: 1;
        transition: .3s;
    
